<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cn.xiyuanzaixian.xxx.indexable.city.CityIndexActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/CityIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市索引" />

            <TextView
                android:id="@+id/cityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尚未选中城市" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/NameIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名索引" />


            <TextView
                android:id="@+id/contactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尚未选中联系人" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/selectBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择城市" />

            <TextView
                android:id="@+id/select_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尚未选中联系人" />
        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.haozhang.widget.MainActivity"
            tools:showIn="@layout/activity_main">

            <ImageView
                android:id="@+id/left_img"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_marginBottom="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/test" />


            <com.haozhang.lib.SlantedTextView
                android:id="@+id/left_text"
                android:layout_width="@dimen/text_height"
                android:layout_height="@dimen/text_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                app:slantedBackgroundColor="@color/primary"
                app:slantedLength="@dimen/text_slanted"
                app:slantedMode="left"
                app:slantedText="Android"
                app:slantedTextColor="@color/primary_light"
                app:slantedTextSize="10sp" />

            <ImageView
                android:id="@+id/right_img"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_below="@id/left_img"
                android:scaleType="fitXY"
                android:src="@mipmap/test" />

            <com.haozhang.lib.SlantedTextView
                android:layout_width="@dimen/text_height"
                android:layout_height="@dimen/text_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/right_img"
                app:slantedBackgroundColor="#ffff00"
                app:slantedLength="@dimen/text_slanted"
                app:slantedMode="left_triangle"
                app:slantedText="IOS"
                app:slantedTextColor="@color/primary"
                app:slantedTextSize="10sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_below="@id/right_img"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/test" />


            <com.haozhang.lib.SlantedTextView
                android:id="@+id/test"
                android:layout_width="@dimen/text_height"
                android:layout_height="@dimen/text_height"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:slantedBackgroundColor="@color/slanted_4c"
                app:slantedLength="@dimen/text_slanted"
                app:slantedMode="left_bottom"
                app:slantedText="PHP"
                app:slantedTextSize="10sp" />

            <ImageView
                android:id="@+id/img_left_bt_tri"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/test" />


            <com.haozhang.lib.SlantedTextView
                android:id="@+id/slv_left_bt_tri"
                android:layout_width="@dimen/text_height"
                android:layout_height="@dimen/text_height"
                android:layout_alignBottom="@+id/img_left_bt_tri"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:slantedBackgroundColor="@color/slanted_c2"
                app:slantedLength="@dimen/text_slanted"
                app:slantedMode="left_bottom_triangle"
                app:slantedText="WEB"
                app:slantedTextSize="10sp" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/left_img"
                android:scaleType="fitXY"
                android:src="@mipmap/test" />


            <com.haozhang.lib.SlantedTextView
                android:id="@+id/slv_right"
                android:layout_width="@dimen/text_height"
                android:layout_height="@dimen/text_height"
                android:layout_alignEnd="@+id/img_right"
                android:layout_alignRight="@+id/img_right"
                android:layout_alignTop="@+id/img_right"
                app:slantedBackgroundColor="@color/slanted_72"
                app:slantedLength="@dimen/text_slanted"
                app:slantedMode="right"
                app:slantedText="C++"
                app:slantedTextSize="10sp" />

            <ImageView
                android:id="@+id/img_right_tri"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_above="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@mipmap/test" />


            <com.haozhang.lib.SlantedTextView
                android:id="@+id/slv_right_tri"
                android:layout_width="@dimen/text_height"
                android:layout_height="@dimen/text_height"
                android:layout_alignEnd="@+id/img_right_tri"
                android:layout_alignRight="@+id/img_right_tri"
                android:layout_alignTop="@+id/img_right_tri"
                app:slantedBackgroundColor="@color/slanted_e9"
                app:slantedLength="@dimen/text_slanted"
                app:slantedMode="right_triangle"
                app:slantedText="C"
                app:slantedTextSize="10sp" />

            <ImageView
                android:id="@+id/img_right_bt"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_above="@+id/img_left_bt_tri"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@mipmap/test" />


            <com.haozhang.lib.SlantedTextView
                android:id="@+id/slv_right_bt"
                android:layout_width="@dimen/text_height"
                android:layout_height="@dimen/text_height"
                android:layout_alignBottom="@+id/img_right_bt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:slantedBackgroundColor="@color/slanted_fb"
                app:slantedLength="@dimen/text_slanted"
                app:slantedMode="right_bottom"
                app:slantedText="JS"
                app:slantedTextSize="10sp" />

            <ImageView
                android:id="@+id/img_right_bt_tri"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_alignLeft="@+id/img_right_bt"
                android:layout_alignStart="@+id/img_right_bt"
                android:layout_alignTop="@+id/img_left_bt_tri"
                android:scaleType="fitXY"
                android:src="@mipmap/test" />


            <com.haozhang.lib.SlantedTextView
                android:id="@+id/slv_right_bt_tri"
                android:layout_width="@dimen/text_height"
                android:layout_height="@dimen/text_height"
                android:layout_alignBottom="@+id/img_right_bt_tri"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:slantedBackgroundColor="@color/slanted_ff"
                app:slantedLength="@dimen/text_slanted"
                app:slantedMode="right_bottom_triangle"
                app:slantedText="SWIFT"
                app:slantedTextSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ms.square.android.expandabletextview.ExpandableTextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/expand_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandableTextView:animDuration="200"
                expandableTextView:maxCollapsedLines="4">

                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#666666"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@android:color/transparent"
                    android:padding="16dp" />
            </com.ms.square.android.expandabletextview.ExpandableTextView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="#ffffffff">

            <ImageView
                android:layout_width="196dp"
                android:layout_height="158dp"
                android:layout_marginTop="26dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_fruit" />

            <cn.xiyuanzaixian.xxx.indexable.cutdowntext.EasyCountDownTextureView
                android:id="@+id/cutdownText"
                android:layout_width="132dp"
                android:layout_height="36dp"
                app:easyCountBackgroundColor="#ffdddddd"
                app:easyCountColonColor="#ffdddddd"
                app:easyCountColonSize="20sp"
                app:easyCountHour="6"
                app:easyCountMinute="6"
                app:easyCountRectHeight="34dp"
                app:easyCountRectRadius="5dp"
                app:easyCountRectSpacing="12dp"
                app:easyCountRectWidth="36dp"
                app:easyCountSecond="26"
                app:easyCountTimeColor="#ff3A94FF"
                app:easyCountTimeSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/lessonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点名" />

            <Button
                android:id="@+id/goToRxActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="goToRxActivity" />

            <Button
                android:id="@+id/goto_sendcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去发送验证码" />

            <Button
                android:id="@+id/go_to_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去EditText" />

            <Button
                android:id="@+id/goto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去用户登录" />

            <Button
                android:id="@+id/go_to_cart"
                android:text="去购物车"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
